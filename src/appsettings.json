{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppRunIn": "local",

  "Database": {
    "config": "DbConnection:connectionstring"
  },
  "Management": {
    "Endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": [ "*" ]
        }
      }
    }
  },
  "Spring": {
    "Cloud": {
      "Kubernetes": {
        "Reload": {
          "ConfigMaps": true,
          "Secrets": true
        },
        "Config": {
          "FailFast": true,
          "Sources": [
            {
              "Name": "log-configmap",
              "Namespace": "default"
            },
            {
              "Name": "spring-boot-server-admin-url-configmap",
              "Namespace": "default"
            },
            {
              "Name": "spring-boot-server-admin-bp-configmap",
              "Namespace": "default"
            }
          ]
        },
        "Secrets": {
          "Sources": [
            {
              "Name": "db-secret",
              "Namespace": "default"
            }
          ]
        }
      }
    }
  },
  "Boot": {
    "Admin": {
      "Client": {
        "Url": "http://host.docker.internal:9090",
        "BasePath": "http://host.docker.internal:5046"
      }
    }
  }
}

